modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai==1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Telegram Bot"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install python-telegram-bot==21.4 apscheduler==3.10.4 && python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
